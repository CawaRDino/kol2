#include <time.h>
#include <iostream>
using namespace std;

int main (void)
{
    
    int a, b;

    cout << ("Floor: ");
    cin >> a;
    cout << ("1 Floor's Number Of People: ");
    cin >> b;

    int array[b], sum = 0;

    for (int i = 0; i < a; i++)
    {
        array[i] = b + (i * 4);
        sum += array[i];
    }
    cout << "\n" << "Number Of People On The First Floor: " << sum-b;
    
}
